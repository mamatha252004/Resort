@model Resort.Models.Booking

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Booking Details</h2>
        </div>
    </div>
</div>
<div class="card-body border p-4">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Check In Date</dt>
        <dd class="col-sm-9">@Model.CheckInDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Nights</dt>
        <dd class="col-sm-9">@Model.Nights</dd>

        <dt class="col-sm-3">Total Cost</dt>
        <dd class="col-sm-9">@Model.TotalCost</dd>

        
    </dl>
</div>