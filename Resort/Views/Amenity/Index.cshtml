@model IEnumerable<Resort.Models.Amenity>

@{
    ViewData["Title"] = "Amenities";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="col-12 text-center">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Amenity List</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body border p-4">
    <div class="row pb-3">
        <div class="col-6 offset-6 text-end">
            <a asp-controller="Amenity" asp-action="Create" class="btn btn-secondary">
                <i class="<class=" bi bi-plus-circle"></i> Create New Amenity
            </a>
        </div>
    </div>
</div>

<style>
    .villa-table img {
        width: 100px;
        height: auto;
        border-radius: 8px;
    }

    .villa-table th, .villa-table td {
        padding: 8px;
        font-size: 14px;
    }

    .villa-table th {
        background-color: #f8f9fa;
    }

</style>

<table class="table table-bordered table-striped villa-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Villa Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var villa in Model)
        {
            <tr>
                <td>@villa.Villa.Id</td>
                <td>@villa.Name</td>
                <td>@villa.Villa.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group"></div>
                    <a asp-controller="Amenity" asp-action="Update" asp-route-amenityId="@villa.Id"
                       class="btn btn-success mx-2">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                    <a asp-controller="Amenity" asp-action="Delete" asp-route-amenityId="@villa.Id"
                       class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>